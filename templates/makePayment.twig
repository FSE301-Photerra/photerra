{% extends 'base.twig' %}

{% block nav %}{{ include('_simpleNav.twig') }}{% endblock %}

{% block body %}
{# Breadcrumb section #}
<ul class="breadcrumbs">
    <li><a href="/home.php">Home</a></li>
    <li class="current">Make Payment</li>
</ul>

<div class="container make-payment">
    <h1>Make a Payment</h1>

    {% if hitLimit %}
    <div class="alert-box radius alert">
        Uh oh! It looks like you have reach you upload limit.
        Look at the pricing options below to increase your limit and continue sharing
        your best work.
    </div>
    {% endif %}

    <div class="row">
        <div class="large-6 columns">
            <ul class="pricing-table">
                <li class="title">Standard Limit Boost</li>
                <li class="price">$1.25</li>
                <li class="description">Increase your limit</li>
                <li class="bullet-item">5 more uploads</li>
                <li class="cta-button">
                <form action="https://www.paypal.com/cgi-bin/webscr" method="post" target="_top">
                    <input type="hidden" name="cmd" value="_s-xclick">
                    <input type="hidden" name="hosted_button_id" value="T3ZWEZR5Y7X4S">
                    <input type="image" src="https://www.paypalobjects.com/en_US/i/btn/btn_paynowCC_LG.gif" border="0" name="submit" alt="PayPal - The safer, easier way to pay online!">
                    <img alt="" border="0" src="https://www.paypalobjects.com/en_US/i/scr/pixel.gif" width="1" height="1">
                </form>
                </li>
            </ul>
        </div>
        <div class="large-6 columns">
            <ul class="pricing-table">
                <li class="title">Premium Photo</li>
                <li class="price">$1.00</li>
                <li class="description">Give one of your images the prestige it deserves</li>
                <li class="bullet-item">Some details</li>
                <li class="cta-button">
                <form action="https://www.paypal.com/cgi-bin/webscr" method="post" target="_top">
                    <input type="hidden" name="cmd" value="_s-xclick">
                    <input type="hidden" name="hosted_button_id" value="JQ3MUULWF6E3G">
                    <input type="image" src="https://www.paypalobjects.com/en_US/i/btn/btn_paynowCC_LG.gif" border="0" name="submit" alt="PayPal - The safer, easier way to pay online!">
                    <img alt="" border="0" src="https://www.paypalobjects.com/en_US/i/scr/pixel.gif" width="1" height="1">
                </form>
                </li>
            </ul>
        </div>
    </div>
</div>
{% endblock %}
