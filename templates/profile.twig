{% extends 'base.twig' %}

{% block body %}
{# Breadcrumb section #}
<ul class="breadcrumbs">
  <li><a href="/home.php">Home</a></li>
  <li class="current">User Profile</li>
</ul>

<div class="container user">
    <h1> User Profile </h1>

    {# User details section #}
    {% if user.isCurrentUser() %}
        <section class="details">
            <h2>Details</h2>
            <form method="POST" action="user_update.php">
                <fieldset>
                    <legend>Account Details</legend>
                    <div class="row">
                        <div class="large-12 columns">
                            <label>
                                First Name
                                <input type="text" name="fname" value="{{ user.firstname }}">
                            </label>
                        </div>
                    </div>

                    <div class="row">
                        <div class="large-12 columns">
                            <label>
                                Last Name
                                <input type="text" name="lname" value="{{ user.lastname }}">
                            </label>
                        </div>
                    </div>

                    <div class="row">
                        <div class="large-12 columns">
                            <label>
                                Email
                                <input type="text" name="email" value="{{ user.email }}">
                            </label>
                        </div>
                    </div>
                </fieldset>

                <div class="row">
                    <ul class="button-group">
                        <li><input type="submit" class="button success" value="Update Account"></li>
                    </ul>
                </div>
            </form>
        </section>

        {# Payment section #}
        <section class="payments">
            <h2>Payments</h2>
            {% if payments|length > 0 %}
                <table>
                    <thead>
                        <tr>
                            <th>ID</th>
                            <th>Description</th>
                            <th>Date</th>
                        </tr>
                    </thead>
                    <tbody>
                        {% for payment in payments %}
                        <tr>
                            <td>{{ payment.id }}</td>
                            <td>{{ payment.typedesc }}</td>
                            <td>{{ payment.createdOn }}</td>
                        </tr>
                        {% endfor %}
                    </tbody>
                </table>

            {% else %}
                <div class="panel callout radius">
                    <p>
                        You haven't made any payments yet. All new users are given 10 free uploads.
                        After that for the price of [price here] you get 5 more uploads.
                    </p>
                    <p>
                        Also your pictures can be given a premium status for just [price here].
                        This means that they will be given special treatment over all other nearby photos.
                        It is a great way to get your name out there and show off your best work.
                    </p>
                </div>
            {% endif %}
        </section>

    {% else %}
        <section class="details">
            <h2>Details</h2>
            <div class="row">
                <div class="large-12 columns">
                    First Name: {{ user.firstname }}
                </div>
            </div>

            <div class="row">
                <div class="large-12 columns">
                    Last Name: {{ user.lastname }}
                </div>
            </div>

            <div class="row">
                <div class="large-12 columns">
                    Email: {{ user.email }}
                </div>
            </div>
        </section>
    {% endif %}

    {# Photos section #}
    <section class="photos">
        <h2>Photos</h2>
        {% if photos|length > 0 %}
            <ul class="small-block-grid-2 medium-block-grid-3 large-block-grid-4">
                {% for photo in photos %}
                <li>
                    <a class="th" href="viewPhoto.php?id={{ photo.id }}">
                        <img src="/pictures/{{ photo.filename }}">
                    </a>
                </li>
                {% endfor %}
            </ul>
        {% else %}
            <div class="panel callout radius">
                You haven't uploaded any photos yet. What's up with that?! Get out there and explore.
            </div>
        {% endif %}
    </section>
    </div>
{% endblock %}
